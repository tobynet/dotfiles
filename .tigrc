set line-graphics = ascii

set main-view = \
    date:local=true \
    id \
    author:abbreviated \
    commit-title:graph=v2,refs=true

set blame-view = date \
    author:abbreviated \
    file-name:auto \
    id:true,color \
    line-number:true,interval=1 text

set tree-view = \
    line-number:no,interval=5 \
    mode \
    author:full \
    file-size:units \
    date:local=true \
    id:true,color file-name

set pager-view = line-number:true,interval=1 text
set log-view = line-number:true,interval=1 text
set blob-view = line-number:true,interval=1 text
set diff-view = line-number:true,interval=1 text

set mouse = true